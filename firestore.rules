rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own time entries
    match /entries/{entryId} {
      // Allow read if the entry belongs to the user
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      
      // Allow create if the user is authenticated and the new entry has their uid
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      
      // Allow update if the entry belongs to the user AND they are not changing the uid
      allow update: if request.auth != null 
                    && resource.data.uid == request.auth.uid
                    && request.resource.data.uid == request.auth.uid;
                    
      // Allow delete if the entry belongs to the user
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
  }
}
