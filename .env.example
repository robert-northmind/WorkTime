VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Optional: Agent test login mode for local AI-agent testing
# When enabled, this email/password pair can log in without Firebase auth.
# WARNING: This enables a non-Firebase login path and MUST NEVER be enabled in production builds.
# WARNING: All VITE_* values are embedded in the client bundle and are NOT SECRETS.
# Intended for local development only (e.g., `npm run dev`).
VITE_AGENT_TEST_AUTH_ENABLED=false
VITE_AGENT_TEST_EMAIL=agent-test@example.com
VITE_AGENT_TEST_PASSWORD=agent-test-password

# Grafana Faro Configuration
# The collector URL for your Grafana Faro instance
VITE_FARO_URL=

# Optional: Application name (defaults to 'WorkTime')
VITE_FARO_APP_NAME=WorkTime

# Optional: Application version
VITE_FARO_APP_VERSION=0.0.0

# Optional: Environment name (defaults to Vite's MODE: development/production)
VITE_FARO_ENVIRONMENT=

# Faro Source Map Upload Configuration (for production builds)
# Obtain API key from: https://grafana.com/docs/grafana-cloud/monitor-applications/frontend-observability/sourcemap-upload-plugins/#obtain-an-api-key
FARO_API_KEY=
